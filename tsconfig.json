{
  "compilerOptions": {
    /* Build */
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "lib": ["es2022"],

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "types": ["vitest/globals"]
  }
}
